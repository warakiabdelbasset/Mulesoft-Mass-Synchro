<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>mule-azure-service-bus-connector</artifactId>
    <version>3.1.1</version>
    <packaging>mule-extension</packaging>
    <name>Azure Service Bus Connector - Mule 4</name>

    <parent>
        <groupId>com.mulesoft.connectors</groupId>
        <artifactId>mule-connectivity-parent</artifactId>
        <version>3.2.8-RUNTIME.4.2.1</version>
    </parent>

    <properties>
        <licensePath>LICENSE.md</licensePath>
        <jdk.version>1.8</jdk.version>
        <azure.version>3.4.0</azure.version>
        <mavenResourcesVersion>3.0.2</mavenResourcesVersion>
        <runtimeVersion>4.2.1</runtimeVersion>
        <runtimeProduct>MULE_EE</runtimeProduct>
        <maven.build.timestamp.format>yyyyMMdd-HHmmssSSS</maven.build.timestamp.format>
        <commonVersion>2.7</commonVersion>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.mulesoft.munit</groupId>
                <artifactId>munit-extensions-maven-plugin</artifactId>
                <version>${munit.extensions.maven.plugin.version}</version>
                <dependencies>
                    <dependency>
                        <groupId>com.microsoft.azure</groupId>
                        <artifactId>azure-servicebus</artifactId>
                        <version>${azure.version}</version>
                        <exclusions>
                            <exclusion>
                                <groupId>com.nimbusds</groupId>
                                <artifactId>oauth2-oidc-sdk</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                    <dependency>
                        <groupId>org.mule.modules</groupId>
                        <artifactId>mule-validation-module</artifactId>
                        <version>1.4.0</version>
                        <classifier>mule-plugin</classifier>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.3</version>
                <executions>
                    <execution>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <basedir>${basedir}</basedir>
                    <includes>
                        <include>target/test-mule/munit/*.xml</include>
                    </includes>
                    <replacements>
                        <replacement>
                            <token>ListenerAutoAckFailsQueue</token>
                            <value>ListenerAutoAckFailsQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerAutoAckMultiQueue</token>
                            <value>ListenerAutoAckMultiQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerAutoAckSingleQueue</token>
                            <value>ListenerAutoAckSingleQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerBackPressureQueue</token>
                            <value>ListenerBackPressureQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerFromSubscriptionTopic</token>
                            <value>ListenerFromSubscriptionTopic-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerImmediateAckMultiQueue</token>
                            <value>ListenerImmediateAckMultiQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerImmediateAckSingleQueue</token>
                            <value>ListenerImmediateAckSingleQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerManualAckFailsQueue</token>
                            <value>ListenerManualAckFailsQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerManualAckMultiQueue</token>
                            <value>ListenerManualAckMultiQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerManualAckSingleQueue</token>
                            <value>ListenerManualAckSingleQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerManualAckSingleWithAbandonQueue</token>
                            <value>ListenerManualAckSingleWithAbandonQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerManualAckSingleWithoutCompleteQueue</token>
                            <value>ListenerManualAckSingleWithoutCompleteQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenersWithMultiConsumerQueue</token>
                            <value>ListenersWithMultiConsumerQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenersWithSingleConsumerQueue</token>
                            <value>ListenersWithSingleConsumerQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerWithEmitResponseQueue</token>
                            <value>ListenerWithEmitResponseQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>ListenerWithPrefetchCountQueue</token>
                            <value>ListenerWithPrefetchCountQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>QueueForSendTests</token>
                            <value>QueueForSendTests-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>TopicForSendTests</token>
                            <value>TopicForSendTests-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>an_entity_value_provider_queue</token>
                            <value>an_entity_value_provider_queue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>an_entity_value_provider_topic</token>
                            <value>an_entity_value_provider_topic-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>CompleteTestQueue</token>
                            <value>CompleteTestQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>AbandonTestQueue</token>
                            <value>AbandonTestQueue-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>QueueForReceiveTests</token>
                            <value>QueueForReceiveTests-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>TopicForReceiveTests</token>
                            <value>TopicForReceiveTests-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>QueueForSendBatchTests</token>
                            <value>QueueForSendBatchTests-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>TopicForSendBatchTests</token>
                            <value>TopicForSendBatchTests-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>QueueForReceiveBatchTests</token>
                            <value>QueueForReceiveBatchTests-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>TopicForReceiveBatchTests</token>
                            <value>TopicForReceiveBatchTests-${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>LockMessageTestQueue</token>
                            <value>LockMessageTestQueue-${maven.build.timestamp}</value>
                        </replacement>
                    </replacements>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.microsoft.azure</groupId>
            <artifactId>azure-servicebus</artifactId>
            <version>${azure.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.nimbusds</groupId>
                    <artifactId>oauth2-oidc-sdk</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>${commonVersion}</version>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-codec</artifactId>
                <version>4.1.46.Final</version>
            </dependency>
            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-codec-http</artifactId>
                <version>4.1.48.Final</version>
            </dependency>
            <dependency>
                <groupId>commons-codec</groupId>
                <artifactId>commons-codec</artifactId>
                <version>1.14</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <scm>
        <connection>scm:git:git@github.com:mulesoft/mule4-azure-service-bus-messaging-connector.git</connection>
        <developerConnection>scm:git:git@github.com:mulesoft/mule4-azure-service-bus-messaging-connector.git</developerConnection>
        <url>https://github.com/mulesoft/mule4-azure-service-bus-messaging-connector</url>
        <tag>HEAD</tag>
    </scm>
    <repositories>
        <repository>
            <id>mule-releases</id>
            <name>Nexus Public Releases</name>
            <url>https://repository.mulesoft.org/nexus/content/repositories/releases/</url>
        </repository>
    </repositories>

</project>
