<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.mule.extensions</groupId>
		<artifactId>mule-modules-parent</artifactId>
		<version>1.1.6</version>
	</parent>

	<groupId>46074001-994c-416e-9639-493cfecade69</groupId>
	
	<artifactId>dif-mulesoft-logger</artifactId>
	<version>1.0.0</version>
	<packaging>mule-extension</packaging>

	<name>DIF Mulesoft Logger</name>
	<description>Support MuleSoft logger extension</description>

	<properties>
		<anypoint.org.id>46074001-994c-416e-9639-493cfecade69</anypoint.org.id>

		<!-- START: Lib Common Properties (since we cannot import properties from another pom :( ) -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>
		<sonar.language>java</sonar.language>

		<!-- Java Dependencies -->
		<dependency.java.slf4j>1.7.30</dependency.java.slf4j>
		<dependency.java.jackson>2.10.3</dependency.java.jackson>

		<!-- Maven Dependencies -->
		<dependency.mvn.plugin.jacoco>0.8.5</dependency.mvn.plugin.jacoco>

		<!-- MuleSoft Dependencies -->
		<dependency.mulesoft.http>1.5.16</dependency.mulesoft.http>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>${dependency.mvn.plugin.jacoco}</version>
				<executions>
					<execution>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
					<!-- attached to Maven test phase -->
					<execution>
						<id>report</id>
						<phase>test</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
				<execution>
				<phase>package</phase>
				<goals>
					<goal>single</goal>
				</goals>
				</execution>
				</executions>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<!-- Mulesoft LIBS -->
		<dependency>
			<groupId>org.mule.connectors</groupId>
			<artifactId>mule-http-connector</artifactId>
			<version>${dependency.mulesoft.http}</version>
			<classifier>mule-plugin</classifier>
		</dependency>

		<!-- Required since in MuleSoft this is not auto included -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>${dependency.java.slf4j}</version>
		</dependency>

		<!-- required due to copied commons -->
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-core</artifactId>
			<version>${dependency.java.jackson}</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>${dependency.java.jackson}</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>anypoint-exchange-v2</id>
			<name>Anypoint Exchange</name>
			<url>https://maven.anypoint.mulesoft.com/api/v2/maven</url>
		</repository>
		<repository>
			<id>mulesoft-releases</id>
			<name>MuleSoft Releases Repository</name>
			<url>https://repository.mulesoft.org/releases/</url>
		</repository>
		<repository>
			<id>mulesoft-releases-nexus</id>
			<name>mulesoft-releases-nexus</name>
			<url>https://repository.mulesoft.org/nexus/content/repositories/public/</url>
		</repository>
		<repository>
			<id>mulesoft-releases-ee</id>
			<name>mulesoft-releases-ee</name>
			<url>https://repository.mulesoft.org/nexus-ee/content/repositories/releases-ee/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>mulesoft-releases</id>
			<name>mulesoft release repository</name>
			<url>https://repository.mulesoft.org/releases/</url>
		</pluginRepository>
	</pluginRepositories>
	
	<distributionManagement>
		<repository>
			<id>anypoint-exchange-v2</id>
			<name>Anypoint Exchange</name>
			<url>https://maven.anypoint.mulesoft.com/api/v1/organizations/${anypoint.org.id}/maven</url>
		</repository>
		<snapshotRepository>
			<id>anypoint-exchange-v2</id>
			<name>Anypoint Exchange</name>
			<url>https://maven.anypoint.mulesoft.com/api/v1/organizations/${anypoint.org.id}/maven</url>
		</snapshotRepository>
	</distributionManagement>
	
</project>
